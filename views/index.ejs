<!DOCTYPE html>
<html>
  <head>
    <!-- To add in order to scale the view for mobiles -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body id="background">
    <%- include('tetepage'); %>
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center" style="height: 100vh;">
          <div class="formArea">
            <h2 class="offset-2">Sign-in :</h2>
            <form action="/sign-in" method="POST" >
              <div class="form-group">
                <input name="email" type="text" class="form-control my-3" placeholder="Email" >
              </div>
              <div class="form-group">
                <input name="pass" type="password" class="form-control my-3" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-danger form-control">Confirm</button>
            </form>
          </div>
          <form action="/sign-up" method="POST" class="sign-in col-12 col-lg-6 text-center">
            <h2 class="offset-1">Sign-up :</h2>
            <input name="name" type="text" class="form-control my-3" placeholder="Last Name">
            <input name="firstname" type="text" class="form-control my-3" placeholder="First Name">
            <input name="email" type="email" class="form-control my-3" placeholder="Email">
            <input name="pass" type="password" class="form-control my-3" placeholder="Password">
            <button type="submit" class="btn btn-danger form-control">Confirm</button>    
          </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
